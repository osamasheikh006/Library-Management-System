@model IEnumerable<OA_Library.Models.IssueBookTable>

@{
    ViewBag.Title = "Books Return History";
}

<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Issue List</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.BookTable.BookTitle)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.EmployeeTable.FullName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.IssueCopies)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.IssueDate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ReturnDate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Status)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Description)
                        </th>
                        @*<th>
                            @Html.DisplayNameFor(model => model.ReserveNoOfCopies)
                        </th>*@

                        <th>
                            @Html.DisplayNameFor(model => model.UserTable.UserName)
                        </th>
                       
                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in Model)
                    {
                    <tr>

                        <td>
                            @Html.DisplayFor(modelItem => item.BookTable.BookTitle)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EmployeeTable.FullName)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.IssueCopies)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IssueDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ReturnDate)
                        </td>
                        <td>
                            @*@Html.DisplayFor(modelItem => item.Status)*@
                            <p class="text-success" style="font: bold">Issue</p>
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        @*<td>
                            @Html.DisplayFor(modelItem => item.ReserveNoOfCopies)
                        </td>*@

                        <td>
                            @Html.DisplayFor(modelItem => item.UserTable.UserName)
                        </td>
                        

                    </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>
