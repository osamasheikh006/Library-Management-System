@model IEnumerable<OA_Library.Models.BookFineTable>

@{
    ViewBag.Title = "Pendind Fine";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Pending Fine List</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>

                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.BookTable.BookTitle)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.EmployeeTable.FullName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.FineDate)
                        </th>

                        @*<th>
                                @Html.DisplayNameFor(model => model.ReceiveAmount)
                            </th>*@
                        <th>
                            @Html.DisplayNameFor(model => model.NoOfDays)
                        </th>
                        <th>Fine per Day</th>
                        <th>
                            @Html.DisplayNameFor(model => model.FineAmount)
                        </th>
                        @*<th>
                                @Html.DisplayNameFor(model => model.UserTable.UserName)
                            </th>*@
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.BookTable.BookTitle)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.EmployeeTable.FullName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FineDate)
                            </td>

                            @*<td>
                                    @Html.DisplayFor(modelItem => item.ReceiveAmount)
                                </td>*@
                            <td>
                                @Html.DisplayFor(modelItem => item.NoOfDays)
                            </td>
                            <td>
                                20PKR
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FineAmount)
                            </td>
                            @*<td>
                                    @Html.DisplayFor(modelItem => item.UserTable.UserName)
                                </td>*@
                            <td>
                                @Html.ActionLink("Submit Fine", "SubmitFine", new { id = item.BookFineID }, new { @class = "btn btn-primary" })

                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>
